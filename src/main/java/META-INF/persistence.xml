<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="cronosPU">
		<class>ac.modelo.Pessoa</class>
		<class>base.modelo.Aluno</class>
		<class>base.modelo.Curso</class>
		<class>ac.modelo.ProfessorCurso</class>
		<class>base.modelo.Turma</class>
		<class>ac.modelo.AlunoTurma</class>
		<class>ac.modelo.Movimentacao</class>
		<class>ac.modelo.Grupo</class>
		<class>ac.modelo.GrupoTurma</class>
		<class>ac.modelo.Atividade</class>
		<class>ac.modelo.AtividadeTurma</class>
		<class>ac.modelo.Certificado</class>
		<class>base.modelo.Tipo</class>
		<class>base.modelo.Servidor</class>
		<class>ac.modelo.Permissao</class>
		<class>sgpb.modelo.Evento</class>
		<class>sgpb.modelo.Organizadores</class>
		<class>sgpb.modelo.Atividades</class>
		<class>sgpb.modelo.InscritoAutenticado</class>
		<class>sgpb.modelo.PermissaoSGPB</class>



		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cronos" />
	<property name="javax.persistence.jdbc.password" value="" />
<!-- 	<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" /> -->
			
			
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
	

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />


			<property name="hibernate.connection.provider_class" 
				value="org.hibernate.connection.C3P0ConnectionProvider" />
			
			
			<property name="hibernate.c3p0.max_size" value="100" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="1800" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.timeout" value="1800" />


		</properties>
	</persistence-unit>
</persistence>
